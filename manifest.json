{

  "manifest_version": 2,
  "name": "AdLimiter",
  "version": "3.0.0",

  "description": "Reduces the number of ads on search result pages.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": [
      "*://*.bing.com/",
      "*://*.duckduckgo.com/"
      "*://*.iseek.com/",
      "*://*.google.com/",
      "*://*.yandex.com/",
      "*://*.search.yahoo.com/"],
      "js": ["contentscript/main.js"]
    }
  ],
  "applications": {
    "gecko": {
      "id": "info@sitetruth.com"
      }
  }
}
